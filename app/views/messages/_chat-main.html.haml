.chat-main
  .chat-header
    .chat-header__left
      %h2
        = current_user.groups.first.name
      %p.chat-header__users
        Members:
        = render partial: 'member', collection: current_user.groups.first.users, as: "user"
    .chat-header__right
      .chat-header__edit-btn
        = link_to "編集", edit_group_path(current_user.groups.first)
  .chat-body
    %ul.chat-messages
      = render partial: 'message', collection: @messages
  .chat-footer
    = form_for @message, remote: true do |f|
      .new_message
        .chat-footer__body
          = f.text_area :body, class: "chat-footer__textarea"
          = f.submit "送信", class: "chat-footer__submit"
